<div class="container register">
  <div class="row mt-5">
    <div class="col-md-6 mx-auto">
      <div class="card card-body login-card">
        <h1 class="text-center mt-3">Register</h1>
        <hr />
        {{> message}}
        <form action="/users/register" class="mt-3" method="POST">
          <div class="form-group">
            <label for="name">Name : </label>
            <input type="text" name="name" id="name" class="form-control register-formControl" placeholder="Enter Name" value="{{name}}" onkeyup="value=value.replace(/[^\a-\z\A-\Z0-9\u4E00-\u9FA5]/g,'')" 
            {{!-- required --}}
            />
          </div>
          <div class="form-group">
            <label for="email">Email : </label>
            <input type="text" name="email" id="email" class="form-control register-formControl"
            placeholder="Enter Email" value="{{email}}"  
            pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$" 
            {{!-- required --}}
               />
          </div>
          <div class="form-group">
            <label for="password">Password : </label>
            <input type="password" name="password" id="password" class="form-control register-formControl"
              placeholder="Enter Password" value="{{password}}" minlength="8" maxlength="12" 
              {{!-- onkeyup="value=value.replace(/[\W]/g,'')"  --}}
              {{!-- required --}}
              />
          </div>
          <div class="form-group">
            <label for="confirmPassword">Confirm Password : </label>
            <input type="password" name="confirmPassword" id="confirmPassword" class="form-control register-formControl"
              placeholder="Enter confirmPassword" value="{{confirmPassword}}" 
               minlength="8" maxlength="12"
              {{!-- onkeyup="value=value.replace(/[\W]/g,'')"  --}}
              {{!-- required --}}
              />
             {{!-- pattern="^([a-zA-Z]+\d+|\d+[a-zA-Z]+)[a-zA-Z0-9]*$"/> --}}
          <button type="submit" class="btn btn-info btn-block mt-3" style="background-color: #f77308; border:none">註冊</button>
            <a href="/auth/facebook" class="btn btn-block btn-primary">Facebook Login</a>
            <a href="/auth/google" class="btn btn-block btn-success">Google Login</a>
            <a href="/auth/github" class="btn btn-block btn-secondary">Github Login</a>
          <p class="lead mt-4">有帳號了 !
            <a href="/users/login" class="register-button">登入</a>
          </p>
        </form>
      </div>
    </div>
  </div>
</div>